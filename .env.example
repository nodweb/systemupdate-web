# SystemUpdate-Web environment template
# Copy to .env and adjust values for local/dev

# Global
ENV=dev
DOMAIN=systemupdate.local
LETSENCRYPT_EMAIL=admin@example.com

# Postgres
POSTGRES_USER=systemupdate
POSTGRES_PASSWORD=systemupdate
POSTGRES_DB=systemupdate
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Kafka/Redpanda
KAFKA_BROKER=kafka:9092

# MinIO (S3)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=systemupdate

# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# OIDC / JWT (dev only placeholders)
OIDC_ISSUER=http://keycloak:8080/realms/systemupdate
OIDC_AUDIENCE=systemupdate
JWT_PRIVATE_KEY_BASE64=
JWT_PUBLIC_KEY_BASE64=

# Gateway
GATEWAY_ADMIN_TOKEN=changeme-admin-token
